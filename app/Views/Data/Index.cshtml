@model IEnumerable<app.Models.Personer>

@{ ViewData["Title"] = "Index"; }

<h1>Index</h1>

<p>
    <a asp-action="Create">Tilføj person</a>
</p>
<form asp-controller="Data" asp-action="Index" method="get">
    <p>
        Søg på fornavn: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fornavn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Efternavn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postnr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.By)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefonnr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Fornavn)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Efternavn)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Adresse)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Adresse2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Postnr)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.By)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telefonnr)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
